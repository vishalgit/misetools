# ===========================
# Kitty Terminal Configuration
# Optimized for VNC sessions
# ===========================

# Font settings
font_family       family="JetBrainsMono Nerd Font" style="Medium"
font_size         16.0

# Bold/Italic variants
bold_font         family="JetBrainsMono Nerd Font" style="Bold"
italic_font       family="JetBrainsMono Nerd Font" style="MediumItalic" 
bold_italic_font  family="JetBrainsMono Nerd Font" style="BoldItalic"

# Scrollback
scrollback_lines  1000
enable_audio_bell no

# Cursor
cursor_shape      block

# Background
background_opacity 1.0
