# ===========================
# Kitty Terminal Configuration
# Optimized for VNC sessions
# ===========================

# Font settings
font_family       JetBrainsMono Nerd Font
font_size         18.0

# Bold/Italic variants
bold_font         auto
italic_font       auto
bold_italic_font  auto

# Scrollback
scrollback_lines  1000
enable_audio_bell no

# Cursor
cursor_shape      block

# Background
background_opacity 1.0
